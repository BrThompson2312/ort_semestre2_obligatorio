@using Dominio.Entidades;
@model Cliente;

<div class="d-flex align-items-center justify-content-center flex-column">
    <h1>Alta Cliente</h1>
    <form method="post" class="d-flex align-items-center flex-column gap-2">
        <input type="text" name="Nombre" placeholder="Nombre" value="@Model.Nombre" />
        <input type="text" name="Apellido" placeholder="Apellido" value="@Model.Apellido" />
        <input type="text" name="Email" placeholder="Email" value="@Model.Email" />
        <input type="text" name="Contrasenia" placeholder="Contraseña" value="@Model.Contrasenia" />
        <input type="text" name="Saldo" placeholder="Saldo" value="@Model.Saldo" />
        <input type="submit" name="" value="Agregar" />
    </form>
</div>

@if (ViewBag.mensaje != null)
{
    <p class="alert alert-danger m-2">
        @ViewBag.mensaje
    </p>
}