@using Dominio.Entidades

@if (ViewBag.mensaje_error != null)
{
    <div class="alert alert-danger mb-2 mt-2" role="alert">
        @ViewBag.mensaje_error
    </div>
}

@{
    var u = ViewBag.Usuario;
}

<div>
    <h1>Modificar</h1>
    <form method="post" class="form-mod d-flex flex-column align-items-start gap-2">
        <label>Nombre</label>
        <input type="text" name="Nombre" value="@u.Nombre"/>
        <label>Apellido</label>
        <input type="text" name="Apellido" value="@u.Apellido" />
        <label>Email</label>
        <input type="text" name="Email" value="@u.Email" />
        <label>Contraseña</label>
        <input type="password" name="Contrasenia" value="@u.Contrasenia" />
        <label>Repita Contraseña</label>
        <input type="password" name="Password2" value="@u.Contrasenia" />
        <button class="btn btn-primary" type="submit">Modificar</button>
    </form>
</div>